extend layout

block content
    p
        | <b>My profile.</b>

    table(border=0)
        - each result in results
            tr
                td IdM ID / Cosmos username:
                td
                    b &nbsp;#{result.id}
            tr
                td IdM email:
                td
                    b &nbsp;#{result.email}
            tr
                td Password:
                td
                    b &nbsp;#{result.password}
            tr
                td HDFS quota:
                td
                    b &nbsp;#{result.hdfs_quota}
            tr
                td HDFS used:
                td
                    b &nbsp;#{result.hdfs_used}
            tr
                td Registration time:
                td
                    b &nbsp;#{result.registration_time}
            tr
                td Last access time:
                td
                    b &nbsp;#{result.last_access_time}

block sidebar
    .widget
        p
            | Options:

        ul
            li
                a(href="dashboard") - Dashboard
            li
                a(href="change_password") - Change password


        form(name="logout", action="logout", method="get")
            div.actions
                input(type="submit", value="Logout", id="submit")
