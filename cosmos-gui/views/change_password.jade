extend layout
block content
    p
        | <b>Change password.</b>

    form(name="change_password", action="change_password", method="post")
        div.input
            span.label Password:
            br
            input(type="password", name="password1", id="password")
        div.input
            span.label Retype the password:
            br
            input(type="password", name="password2", id="password")
        div.actions
            br
            input(type="submit", value="Change password", id="submit2")
block sidebar
   .widget
      p
         | Options:

      ul
         li
            a(href="profile") - My profile
         li
            a(href="dashboard") - Dashboard

      form(name="logout", action="logout", method="get")
         div.actions
            input(type="submit", value="Logout", id="submit")
